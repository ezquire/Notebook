<div class = "page-header">
    <h1>All Artists</h1>
</div>

<a href="/artist/add">Add New Artist</a> <br />

<br />

<% if(locals.was_successful) { %>
<div class="col-md-12">
    <div id="message" class="alert alert-success col-md-4">
        Woot! Success! Artist: <%= result[result.length-1].artist_name %> was saved.%>
    </div>
</div>
<% }%>

<table class="table table-striped">
    <thead>
    <tr><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/artist/?artist_id=<%= result[i].artist_id %>"><%= result[i].artist_name %></a></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/browse/edit/?artist_id=<%= result[i].artist_id %>'">Edit</button>
        </td>
    </tr>
    <% } %>
    </tbody>

</table>

