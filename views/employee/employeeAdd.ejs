<%- include("../includes/header.ejs", {title:"Add New Artist"}); %>
    <div class="page-header">
        <h1>Add New Employee</h1>
    </div>

    <form action="/employee/insert" method="get">
        First Name: <input id="fname" name="fname" type="text" />
        <br />
        Last Name:  <input id="lname" name="lname" type="text" />
        <br />
        Phone Number:  <input id="phone" name="phone" type="text" />
        <br />
        Stage Number:
        <select id="stage_id" name="stage_id">
            <% for(var i=0; stage.length > i; i++ ) { %>
            <option value="<%= stage[i].stage_id %>">Stage <%= stage[i].stage_id %></option>
            <% } %>
        </select>
        <br />
        <input type="submit" />

    </form>
<%- include("../includes/footer.ejs"); %>