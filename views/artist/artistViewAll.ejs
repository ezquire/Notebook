<%- include("../includes/header.ejs", {title:"Artists - View All"}); %>
<div class = "page-header">
    <h1>All Artists</h1>
</div>

<a href="/artist/add">Add New Artist</a> <br />

<br />

<table class="table table-striped">
    <thead>
    <tr><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/artist/?artist_id=<%= result[i].artist_id %>"><%= result[i].artist_name %></a></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/artist/edit/?artist_id=<%= result[i].artist_id %>'">Edit</button>
            <form action="/artist/delete/" style="display:inline;">
                <input type="hidden" name="artist_id" id="artist_id" value="<%= result[i].artist_id %>" />
                <input type="submit" value="Delete"/>
            </form>

        </td>
    </tr>
    <% } %>
    </tbody>

</table>
<%- include("../includes/footer.ejs"); %>