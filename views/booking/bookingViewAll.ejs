<%- include("../includes/header.ejs", {title:"Bookings - View All"}); %>
<div class="page-header">
    <h1>All Bookings</h1>
</div>

<a href="/booking/add">Add New Booking</a> <br />

<br />

<table class="table table-striped">
    <thead>
    <tr><th>Artist</th><th>Cost</th></tr>
    </thead>
    <tbody>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/artist/?artist_id=<%= result[i].artist_id %>"><%= result[i].artist_name %></a></td>
        <td><%= result[i].cost%></td>
    </tr>
    <% } %>
    </tbody>

</table>
